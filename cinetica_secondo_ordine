import numpy as np
import matplotlib.pyplot as plt

#Stiamo considerando una reazione chimica con cinetica del secondo ordine
#A+B->P

#decadimento substrato A in una reazione chimica con cinetica del secondo ordine
def concentrazione_A(A0,B0,k,t):
    y=(A0*(B0-A0)*np.exp(k*t*(A0-B0)))/(B0-A0*np.exp(k*t*(A0-B0)))
    return y

#decadimento substrato B in una reazione chimica con cinetica del secondo ordine
def concentraziione_B(A0,B0,k,t):
    y=(B0*(B0-A0))/(B0-A0*np.exp(k*t*(A0-B0)))
    return y

#formazione prodotto in una reazione chimica con cinetica del secondo ordine
def concentrazione_P(A0,B0,k,t):
    y=(B0*(np.exp(k*t*(B0-A0))-1))/(np.exp(k*t*(B0-A0))*(B0/A0)-1)
    return y
